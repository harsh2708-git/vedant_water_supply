<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VedantWaterSupply" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="RobotoRegular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/color_868588</item>
    </style>

    <style name="RobotoRegular12" parent="RobotoRegular">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="RobotoRegular14" parent="RobotoRegular">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="RobotoRegular16" parent="RobotoRegular">
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="RobotoMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/color_868588</item>
    </style>

    <style name="RobotoMedium16" parent="RobotoMedium">
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="RobotoMedium18" parent="RobotoMedium">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="MontserratMedium24">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_0E0D12</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="MontserratMedium14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_0E0D12</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="InputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_input_border</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:paddingTop">@dimen/_15sdp</item>
        <item name="android:paddingBottom">@dimen/_15sdp</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>

        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="DisabledInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_dbdadb_border</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/color_868588</item>

    </style>

    <declare-styleable name="ShowHidePasswordEditText">
        <attr name="drawable_hide" format="integer" />
        <attr name="drawable_show" format="integer" />
        <attr name="tint_color" format="color" />
        <attr name="additionalTouchTargetSize" format="dimension" />
    </declare-styleable>

    <style name="BlueButton" parent="RobotoMedium16">
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:paddingStart">@dimen/_30sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_30sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CheckBoxStyle" parent="RobotoRegular16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:drawableStart">@drawable/checkbox_selector</item>
        <item name="android:drawableTint">@color/color_4A494D</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
    </style>

    <style name="IconFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_868588</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="fontFamily">@font/la_solid</item>
    </style>

</resources>